<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/navigation_hidden_header_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/image_large_min_height"
        android:layout_margin="@dimen/components_margin_large"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/template_text_image"
        app:srcCompat="@drawable/ic_go4lunch_main" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/navigation_hidden_header_user_image"
            android:layout_width="@dimen/image_small_width"
            android:layout_height="@dimen/image_small_width"
            android:layout_margin="@dimen/components_margin_large"
            android:contentDescription="@string/template_text_image"
            tools:srcCompat="@tools:sample/avatars[12]" />

        <TextView
            android:id="@+id/navigation_hidden_header_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/components_margin_large"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/template_text_name" />

    </LinearLayout>

</LinearLayout>